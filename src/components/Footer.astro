---
import "../styles/global.css";
import { Mail, MapPin, Instagram, Linkedin, Twitter } from 'lucide-astro';
---

<footer class="bg-gray-900 text-white py-8 px-12 mt-24">
    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 text-sm">
        <div>
            <h2 class="text-lg font-bold mb-2">Quick Links</h2>
            <ul class="space-y-1">
                <li>Home</li>
                <li>IIT H</li>
                <li>About</li>
                <li>Contact</li>
            </ul>
        </div>
        <!-- Contact Info -->
        <div>
            <h2 class="text-lg font-bold mb-2">Contact Info</h2>
            <div class="flex items-center space-x-2">
                <Mail class="w-5 h-5" />
                <a href="mailto:nodal.qs@iith.ac.in" class="hover:underline">
                nodal.qs@iith.ac.in
                </a>
            </div>
            <div class="flex items-start space-x-2 mt-2">
                <MapPin class="w-5 h-5 mt-1" />
                <p>Indian Institute of Technology Hyderabad, Kandi, Sangareddy, Telangana-502284</p>
            </div>
        </div>
        <!-- Follow Us -->
        <div>
            <h2 class="text-lg font-bold mb-2">Follow Us</h2>
            <p>Follow us for updates on our green journey</p>
            <div class="flex space-x-4 mt-2">
                <a href="https://www.instagram.com/iithyderabad/?hl=en" aria-label="Instagram">
                <Instagram class="w-5 h-5 hover:text-gray-400" />
                </a>
                <a href="https://www.linkedin.com/school/iithyderabad/posts/?feedView=all" aria-label="LinkedIn">
                <Linkedin class="w-5 h-5 hover:text-gray-400" />
                </a>
                <a href="https://x.com/IITHyderabad?mx=2" aria-label="Twitter">
                <Twitter class="w-5 h-5 hover:text-gray-400" />
                </a>
            </div>
        </div>
    </div>
    <div class="text-center text-sm mt-8 border-t border-gray-700 pt-4">
        &copy; 2025 IIT Hyderabad Sustainability. All rights reserved.
    </div>
</footer>
